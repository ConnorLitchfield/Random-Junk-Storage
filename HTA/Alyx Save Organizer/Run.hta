<script Language="VBScript">
    Function RunBat(sBatchFile)
    Dim oShell
    Set oShell = CreateObject("WScript.Shell")
    oShell.run "cmd /K " & sBatchFile
    Set oShell = Nothing
    End Function
	
    sub Window_onLoad()
    set oFSO = CreateObject("Scripting.FileSystemObject")
    set oFile = oFSO.OpenTextFile("C:\Program Files (x86)\Steam\steamapps\common\Half-Life Alyx\game\hlvr\SAVE\User.txt", 1)
    text = oFile.ReadAll
    document.all.ScriptArea.value = "The user currently loaded into Steam is... " + text
    oFile.Close
    End sub



</SCRIPT>

